{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "ignorePatterns": [
        "**/test/*.js",
        "**/*.test.js"
    ],
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-restricted-syntax": "off",
        "func-names": "off",
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "class-methods-use-this": "off",
        "no-shadow": "off",
        "no-underscore-dangle": "off",
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "no-plusplus": "off"
    }
}